{
  "name": "australian-cycleway-stats-backend",
  "type": "module",
  "scripts": {
    "watch-build-start": "ls src/**/*.* src/*.* | entr -rcs \"npm run  build && npm run start\"",
    "start": "node --max_old_space_size=4096 --trace-warnings  ./dist/index.js",
    "build": "tsc",
    "test": "npx jest",
    "test:watch": "ls test/*.ts src/*.ts src/**/*.ts | entr -rcs 'yarn test'"
  },
  "dependencies": {
    "@turf/turf": "^6.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.17",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
